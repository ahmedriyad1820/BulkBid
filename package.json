{
  "name": "bulkbid-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:db": "brew services start mongodb/brew/mongodb-community || true",
    "stop:db": "brew services stop mongodb/brew/mongodb-community || true",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "npm run dev",
    "dev:all": "npm run start:db && concurrently -k -n BACKEND,FRONTEND -c cyan,magenta \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "dependencies": {
    "framer-motion": "^11.2.6",
    "lucide-react": "^0.468.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.2"
  }
}
